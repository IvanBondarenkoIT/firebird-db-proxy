# ==================== DATABASE ====================
# ВАЖНО: Для Windows Server используем localhost!
# НЕ использовать внешний IP!

DB_HOST=127.0.0.1
DB_PORT=3055
DB_NAME=DK_GEORGIA

# ВАЖНО: Использовать READ-ONLY пользователя!
# НЕ использовать SYSDBA в production!
DB_USER=api_readonly
DB_PASSWORD=Api#ReadOnly#2025!Secure

# Connection settings
DB_MAX_CONNECTIONS=10
DB_CONNECTION_TIMEOUT=10
DB_QUERY_TIMEOUT=30

# ==================== CACHE ====================
# Кеш на 10 минут для production
CACHE_TTL=600

# ==================== SECURITY ====================
# ВАЖНО: Сгенерировать уникальные токены!
# Команда: python scripts/generate_token.py --count 2

# ЗАМЕНИТЕ НА ВАШИ ТОКЕНЫ:
API_TOKENS=СГЕНЕРИРОВАТЬ_ТОКЕН_1,СГЕНЕРИРОВАТЬ_ТОКЕН_2

# CORS settings
# * - разрешить все источники
# Или указать конкретные: https://app.example.com,https://admin.example.com
ALLOWED_ORIGINS=*

# ==================== LOGGING ====================
LOG_LEVEL=INFO
# Опции: DEBUG (подробно), INFO (стандарт), WARNING (только предупреждения), ERROR (только ошибки)

# ==================== APPLICATION ====================
APP_NAME=Firebird DB Proxy
APP_VERSION=1.0.0
APP_ENV=production

# Порт на котором слушает API
# По умолчанию 8000, можно изменить если порт занят
PORT=8000

# ==================== ЗАМЕТКИ ====================
# 
# После настройки этого файла:
# 1. Скопировать как .env в корень проекта
# 2. Проверить подключение: python scripts/test_connection.py
# 3. Запустить API: python -m app.main
# 4. Проверить: http://localhost:8000/api/health
#
# НИКОГДА не коммитить этот файл в Git!
# Хранить в безопасном месте!

